{
  "name": "chaimae/projet-atelier1",
  "description": "Projet Atelier 1",
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Chaimae\\ProjetAtelier1\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Chaimae\\ProjetAtelier1\\tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": "php-cs-fixer fix --dry-run --diff",
    "analyse": "phpstan analyse src tests",
    "test": "phpunit"
  }
}

